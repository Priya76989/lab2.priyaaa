<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="443.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.priya.LoginController">
    <children>
        <!-- Usernam e Field -->
        <TextField fx:id="email" layoutX="150.0" layoutY="100.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter Username" />

        <!-- Password Field -->
        <PasswordField fx:id="password" layoutX="150.0" layoutY="150.0" prefHeight="30.0" prefWidth="200.0" promptText="Enter Password" />

        <!-- Message Label -->
        <Label fx:id="msg" layoutX="150.0" layoutY="250.0" prefHeight="30.0" prefWidth="200.0" text="Enter your credentials" />

        <!-- Login Button -->
        <Button layoutX="170.0" layoutY="209.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="78.0" text="Login" onAction="#handleLoginAction" />
    </children>
</AnchorPane>
